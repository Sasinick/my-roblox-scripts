local noclip = false
local e = true
local uis = game:GetService("UserInputService")
local rs = game:GetService("RunService")
local player = game.Players.LocalPlayer
uis.InputBegan:Connect(function(input, gameProcessedEvent)
if gameProcessedEvent then return end
if input.KeyCode == Enum.KeyCode.Q then
local character = player.Character
local mouse = player:GetMouse()
local pos = mouse.Hit.Position
local cf = CFrame.new(pos.X, pos.Y, pos.Z)
character.HumanoidRootPart.CFrame = cf
end
if input.KeyCode == Enum.KeyCode.E then
if e == true then
e = false
noclip = true
else
e = true
noclip = false
for _, a in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
if a:IsA("BasePart") then
a.CanCollide = true
end
end
end
end
if input.KeyCode == Enum.KeyCode.R then
player.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame + Vector3.new(0, 20, 0)
end
if input.KeyCode == Enum.KeyCode.T then
player.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame + Vector3.new(0, -20, 0)
end
end)
rs.Stepped:Connect(function()
if noclip then
for _, a in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
if a:IsA("BasePart") then
a.CanCollide = false
end
end
end
end)
